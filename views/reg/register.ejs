<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link rel='stylesheet' href='/stylesheets/article.css'/>
    <link rel="stylesheet" href="//cdn.bootcss.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <script src="https://cdn.bootcss.com/jquery/2.1.1/jquery.min.js"></script>
    <script src="../javascripts/check.js"></script>
</head>
<body>
<div class="reg-log">
    <div class="reg-log-box">
        <form method="post" action="/reg/register" autocomplete="off">

            <% if (typeof (error) !== "undefined" && error){ %>
            <p style="color: red"><%= error %></p>
            <% } %>

            <div class="input-group input-group-lg input-group-box">
                <span class="input-group-addon">账　　号：</span>
                <input type="text" class="form-control input-box" name="userName"
                       id="userName" placeholder="请输入用户名">
                <text class="span-msg" id="showMessageUname"></text>
            </div>


            <div class="input-group input-group-lg input-group-box">
                <span class="input-group-addon">密　　码：</span>
                <input type="password" class="form-control input-box" name="passWord"
                       id="passWord" placeholder="请输入密码">
            </div>

            <div class="input-group input-group-lg input-group-box">
                <span class="input-group-addon">确认密码：</span>
                <input type="password" class="form-control input-box" name="passWordRepeat"
                       id="passWordRepeat" placeholder="请输入再次确认密码">
                <span class="span-msg" id="showMessagePwd"></span>
            </div>


            <div>
                <button type="submit" id="register" class="btn btn-primary">注册</button>
                <a href="/reg/login"><input type="button" class="btn btn-primary" value="已有账号，去登录"></a>
            </div>

        </form>
    </div>
</div>
</body>
</html>














