<% include header.ejs %>


<div class="row">
    <div class="col-xs-12 col-md-8">
        <!--********分割线*********-->
        <div id="carouselMenu" class="carousel slide">
            <ol class="carousel-indicators">
                <li data-target="#carouselMenu" data-slide-to="0" class="active"></li>
                <li data-target="#carouselMenu" data-slide-to="1"></li>
                <li data-target="#carouselMenu" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active"><img src="../images/1.jpg" alt="First slide"/></div>
                <div class="item"><img src="../images/2.jpg" alt="Second slide"/></div>
                <div class="item"><img src="../images/3.jpg" alt="Third slide"/></div>
            </div>
        </div>
        <!--********分割线*********-->
        <%
        for (let i = articleItems.length ;i > 0 ;  i--) {
        %>
        <div class="media-img-arti-list white-box">
            <div class="media">
                <div class="media-left media-middle">
                    <a href="#">
                        <img class="media-object img-rounded" src="../../images/4.jpg" alt="">
                    </a>
                </div>
                <div class="media-body">
                    <span class="media-heading list-group-font"><%= articleItems[i - 1].title %></span>
                    <span id="content">
                        <%- articleItems[i - 1].content %>
                        <a href="/article/detail/<%= articleItems[i - 1].id %>">查看全文</a>
                    </span>
                </div>
            </div>
        </div>
        <%
        }
        %>
        <!--********分割线*********-->
    </div>


    <div class="col-xs-6 col-md-4">
        <!--********分割线*********-->
        <div class="list-group list-group-box">
            <div class="list-group-item-box">
                <span class="list-group-item">
                    <span class="list-group-font">最新文章</span>
                </span>
                <%
                var count = 0
                if (articleItems.length > 0) {
                for (let i = articleItems.length ;i > 0 ;  i--) {
                %>
                <a href="/article/detail/<%= articleItems[i - 1].id %>"
                   class="list-group-item">
                    <span class="glyphicon glyphicon-triangle-right"></span>
                    <%= articleItems[i - 1].title %>
                </a>
                <%
                    count++
                    if (count == 6)
                        break
                }  }
                %>
            </div>
        </div>
        <!--********分割线*********-->
        <div class="panel panel-default">
            <div class="panel-body">
                <form method="get" action="/search">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="text" class="form-control" name="keyWord" value=""
                                       placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="submit">搜索</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--********分割线*********-->
        <div class="list-group list-group-box">
            <div class="list-group-item-box">
                <span class="list-group-item">
                    <span class="list-group-font">标签</span>
                </span>
                <div class="list-group-item">
                    <a class="tag-text tag-border-radius ">Default</a>
                </div>
            </div>
        </div>
        <!--********分割线*********-->
    </div>


</div>


<script>
    $(function () {
        $('#carouselMenu').carousel({
            interval: 5000,
            wrap: true,
        })
    })


    $(document).ready(function () {
        $('span#content').children('p').hide();
        $('span#content').children('p:first-child').show();
    })


    $(function () {
        $('.tag-text').mouseover(function () {
            removeClass('tag-border-radius');
        })
    })


</script>


<% include footer.ejs %>
